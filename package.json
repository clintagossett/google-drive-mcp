{
    "name": "@clintagossett/google-drive-collaboration-mcp",
    "version": "0.0.1",
    "description": "Google Drive Collaboration MCP Server - Extended Model Context Protocol server with comprehensive Google Workspace API coverage (Docs, Sheets, Slides) and collaboration features",
    "license": "MIT",
    "author": "Clint Gossett <clint@clintagossett.com> (forked from Piotr Agier)",
    "homepage": "https://github.com/clintagossett/google-drive-mcp",
    "bugs": "https://github.com/clintagossett/google-drive-mcp/issues",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/clintagossett/google-drive-mcp.git"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "claude",
        "google-drive",
        "google-docs",
        "google-sheets",
        "google-slides",
        "google-workspace",
        "ai",
        "llm",
        "integration",
        "oauth2",
        "file-management",
        "document-automation"
    ],
    "type": "module",
    "bin": {
        "google-drive-collaboration-mcp": "./dist/index.js"
    },
    "files": [
        "dist/",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "typecheck": "tsc --noEmit",
        "build": "node scripts/build.js",
        "start": "node dist/index.js",
        "auth": "node dist/index.js auth",
        "watch": "node scripts/build.js --watch",
        "prepare": "npm run build",

        "test": "npm run test:unit",
        "test:unit": "vitest run tests/unit",
        "test:integration": "vitest run --config vitest.integration.config.ts",
        "test:integration:drive": "vitest run --config vitest.integration.config.ts tests/integration/drive.integration.test.ts",
        "test:integration:docs": "vitest run --config vitest.integration.config.ts tests/integration/docs.integration.test.ts",
        "test:integration:sheets": "vitest run --config vitest.integration.config.ts tests/integration/sheets.integration.test.ts",
        "test:integration:slides": "vitest run --config vitest.integration.config.ts tests/integration/slides.integration.test.ts",
        "test:all": "npm run test:unit && npm run test:integration",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:smoke": "node test-tools.mjs",

        "lint": "tsc --noEmit"
    },
    "dependencies": {
        "@google-cloud/local-auth": "^3.0.1",
        "@modelcontextprotocol/sdk": "1.16.0",
        "@types/express": "^5.0.3",
        "express": "^5.1.0",
        "google-auth-library": "^9.15.0",
        "googleapis": "^144.0.0",
        "open": "^10.2.0",
        "punycode": "^2.3.1",
        "uuid": "^11.0.3",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@types/node": "^22.9.3",
        "@types/uuid": "^10.0.0",
        "@vitest/ui": "^4.0.10",
        "c8": "^10.1.3",
        "dotenv": "^17.2.3",
        "esbuild": "^0.25.8",
        "shx": "^0.3.4",
        "typescript": "^5.6.2",
        "vitest": "^4.0.10"
    }
}
